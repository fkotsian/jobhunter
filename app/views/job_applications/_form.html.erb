<%= form_for [current_user, @job_application], url: { action: 'create' }, html: { class: 'form-inline text-center', id: 'app-form'} do |f| %>

  <%= f.fields_for :job do |j| %>
    <%= j.fields_for :company do |c| %>

      <div class='form-group'>
        <%= c.text_field :name,
                          class: 'form-control',
                          placeholder: "Company name" %>
      </div>
  
    <% end %>
    
    <div class='form-group'>
      <%= j.text_field :title, 
                        class: 'form-control', 
                        placeholder: "Job title" %>
    </div>
      
    <div class='form-group'>
      <%= j.url_field :url, 
                      class: 'form-control',
                      placeholder: "http://" %>
    </div>

  <% end %>

  
  <%= f.submit value: "Add App", class: "btn btn-default" %>
    
<% end %>